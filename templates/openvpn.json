{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description" : "Hydra openvpn stack",

  "Parameters" : {
    "StackName": {
      "Type": "String",
      "Description": "Name of the ElasticBeanstalk environment"
    },
    "ResourceName": {
      "Type": "String",
      "Description": "Name of the resource (for tagging)",
      "Default": "openvpn"
    },
    "SubnetID": {
      "Type": "AWS::EC2::Subnet::Id",
      "Description": "An existing subnet ID to use for the network interface"
    },
    "SecurityGroups": {
      "Type": "List<AWS::EC2::SecurityGroup::Id>",
      "Description": "A list of security groups, such as sg-a123fd85."
    },
    "KeyName": {
      "Type": "AWS::EC2::KeyPair::KeyName",
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the ECS instances"
    },
    "HostedZoneName" : {
      "Description" : "Route53 zone to create an alias in",
      "Type" : "String"
    },
    "VpnFqdn": {
      "Description" : "The fully-qualified hostname for the VPN server",
      "Type" : "String"
    },
    "VpnUser" : {
      "Description" : "The username for the VPN user",
      "Type" : "String"
    },
    "VpnPassword" : {
      "Description" : "The password for the VPN user",
      "Type" : "String",
      "NoEcho" : "true"
    },
    "InstanceType" : {
      "Description" : "The EC2 instance type",
      "Type" : "String",
      "Default" : "t2.micro",
      "AllowedValues" : [ "t2.micro", "t2.small", "t2.medium", "m3.medium", "m3.large", "m3.xlarge",
        "m3.2xlarge", "c3.large", "c3.xlarge", "c3.2xlarge", "c3.4xlarge", "c3.8xlarge", "c4.large", "c4.xlarge",
        "c4.2xlarge", "c4.4xlarge", "c4.8xlarge", "r3.large", "r3.xlarge", "r3.2xlarge", "r3.4xlarge", "r3.8xlarge",
        "i2.xlarge", "i2.2xlarge", "i2.4xlarge", "i2.8xlarge", "d2.xlarge", "d2.2xlarge", "d2.4xlarge", "d2.8xlarge",
        "hi1.4xlarge", "hs1.8xlarge", "cr1.8xlarge", "cc2.8xlarge"],
      "ConstraintDescription" : "must be a valid EC2 instance type."
    }
  },
  "Mappings" : {
    "AWSRegionToAMI" : {
      "us-east-1"      : { "AMIID" : "ami-44aaf953" },
      "us-west-1"      : { "AMIID" : "ami-fa105b9a" },
      "us-west-2"      : { "AMIID" : "ami-e8d67288" },
      "eu-west-1"      : { "AMIID" : "ami-07783674" },
      "ap-northeast-1" : { "AMIID" : "ami-2f66c04e" },
      "ap-southeast-2" : { "AMIID" : "ami-5e3b063d" },
      "ap-southeast-1" : { "AMIID" : "ami-d72a8cb4" },
      "eu-central-1"   : { "AMIID" : "ami-3f788150" }
    }
  },
  "Resources" : {
    "Instance" : {
      "Type" : "AWS::EC2::Instance",
      "Properties": {
        "KeyName" : { "Ref" : "KeyName" },
        "ImageId" : { "Fn::FindInMap" : [ "AWSRegionToAMI", { "Ref" : "AWS::Region" }, "AMIID" ] },
        "InstanceType" : { "Ref" : "InstanceType" },
        "NetworkInterfaces": [ {
          "AssociatePublicIpAddress": "true",
          "DeviceIndex": "0",
          "GroupSet": { "Ref" : "SecurityGroups" },
          "SubnetId": { "Ref" : "SubnetID" }
        } ],
        "Tags" : [
          {
            "Key" : "Name",
            "Value" : { "Fn::Sub" : "${StackName}-${ResourceName}" }
          }
        ],
        "UserData" : { "Fn::Base64" : { "Fn::Join" : ["", [
             "public_hostname=", { "Ref" : "VpnFqdn" }, "\n",
             "admin_user=", { "Ref" : "VpnUser" }, "\n",
             "admin_pw=", { "Ref" : "VpnPassword" }, "\n",
             "reroute_gw=0", "\n",
             "reroute_dns=1", "\n"
        ]]}}
      }
    },
    "RecordSet" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
        "Name" : { "Fn::Join": [ ".", [ { "Ref": "VpnFqdn" }, "" ] ] },
        "HostedZoneName" : { "Ref" : "HostedZoneName"},
        "Type" : "CNAME",
        "TTL": "900",
        "ResourceRecords" : [{ "Fn::GetAtt" : ["Instance", "PublicDnsName"] }]
      }
    }
  },
  "Outputs": {
    "URL": {
      "Description": "URL of the OpenVPN Server",
      "Value": { "Fn::Join": ["", ["https://", { "Ref" : "RecordSet" }]] }
    }
  }
}
